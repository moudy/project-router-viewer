<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Routes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link href="<%= namespace %>/assets/app.css" rel="stylesheet">
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th>Path</th>
          <th>Route</th>
          <th>Resource</th>
        </tr>
      </thead>
      <tbody>
        <% routes.forEach(function(route){ %>
          <tr>
            <td>
              <span class='verb'><%= route.method %></span>
              <%= route.path %>
            </td>
            <td><%= route.templatePath %></td>
            <td><%= route.resourceName || '' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
