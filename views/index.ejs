<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Routes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link href="<%= namespace %>/assets/app.css" rel="stylesheet">
  </head>
  <body>
    <div class='wrap'>
      <header>
        <%= counts.total %> Route<% if (counts.total !== 1) { %>s<% } %>

        <span class='verb'><%= counts.get %> get</span>
        <span class='verb'><%= counts.post %> post</span>
        <span class='verb'><%= counts.put %> put</span>
        <span class='verb'><%= counts.delete %> delete</span>

      </header>
      <table>
        <tbody>
          <% routes.forEach(function(route){ %>
            <tr>
              <td class='verb'>
                <%= route.method %>
              </td>
              <td>
                <%= route.path %>
              </td>
              <td><%= route.templatePath %></td>
              <td>
                <% if (route.resourceName) { %>
                  <span class='resource'>
                    <%= route.resourceName %>
                  </span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
