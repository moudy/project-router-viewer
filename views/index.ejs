<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Routes</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link href="<%= namespace %>/assets/app.css" rel="stylesheet">
  </head>
  <body>
    <div class='wrap'>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Path</th>
            <th>Route</th>
            <th>Resource</th>
          </tr>
        </thead>
        <tbody>
          <% routes.forEach(function(route){ %>
            <tr>
              <td class='verb'>
                <%= route.method %>
              </td>
              <td>
                <%= route.path %>
              </td>
              <td><%= route.templatePath %></td>
              <td>
                <% if (route.resourceName) { %>
                  <span class='resource'>
                    <%= route.resourceName %>
                  </span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
